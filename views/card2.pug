doctype html
head
  title Flash Cards
  link(rel='stylesheet' href='stylesheets/style.css')
header
  img(src='/static/img/logo.png')
  p An app to help you study
section.namecard
  .namecard-hello
    p.namecard-greeting Welcome, John!
    form.namecard-exit(action='/goodbye' method='POST')
      button(type='submit')
        img(src='/static/img/close.svg')
section.flashcards
  .card.card-question
    .card-header
    h1.card-title Question
    #content
      h2 Which HTML element can contain JavaScript?
      p#hint
    .card-flip-wrap
      a(href='card-back.html')
        img.card-flip(src='/static/img/flip.svg')
    .card-next
      a(href='error.html')
        img(src='/static/img/next.svg')
